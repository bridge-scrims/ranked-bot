{
  "name": "scrims-ranked",
  "description": "Bridge Scrims ranked Discord bot.",
  "main": "src/index.js",
  "type": "module",
  "scripts": {
    "build": "bun build ./src/index.ts --outdir ./dist --target node",
    "start": "bun run dist/index.js",
    "dev": "bun .",
    "check": "tsc --noEmit && eslint",
    "format": "bunx prettier --check .",
    "format:write": "bunx prettier --write .",
    "typecheck": "npx tsc --noEmit",
    "lint": "bun run format:write && bunx eslint --fix . && bun run typecheck",
    "test": "bun src/test"
  },
  "dependencies": {
    "@discordjs/voice": "^0.18.0",
    "@typegoose/typegoose": "^12.17.0",
    "crypto-js": "^4.2.0",
    "discord.js": "^14.20.0",
    "glob": "^11.0.3",
    "mongodb": "^6.17.0",
    "mongoose": "^8.16.0",
    "mongoose-long": "^0.8.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.29.0",
    "@types/bun": "^1.2.17",
    "@types/crypto-js": "^4.2.2",
    "bun-types": "^1.2.17",
    "eslint": "^9.29.0",
    "prettier": "^3.6.0",
    "typescript-eslint": "^8.34.1"
  }
}
